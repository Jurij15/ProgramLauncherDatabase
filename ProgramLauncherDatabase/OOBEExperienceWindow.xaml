<ui:UiWindow x:Class="SulfurLauncher.OOBEExperienceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SulfurLauncher"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
             
                                       Background="Transparent"
             ExtendsContentIntoTitleBar="True"
             WindowBackdropType="Mica"
             WindowStartupLocation="CenterScreen"
             
        Title="OOBEExperienceWindow" Height="450" Width="800">
    <Grid>
        <ui:LoadingScreen Background="Transparent" x:Name="LScreen">
            <StackPanel>
                <TextBlock Text="Sulfur Launcher" FontSize="36" AllowDrop="True" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="DemiBold"/>
                <TextBlock Text="Preparing for first-time use..." FontSize="14" Foreground="LightGray" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
            </StackPanel>
        </ui:LoadingScreen>
    </Grid>
</ui:UiWindow>
