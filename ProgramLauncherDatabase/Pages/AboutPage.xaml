<ui:UiPage x:Class="ProgramLauncherDatabase.Pages.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProgramLauncherDatabase.Pages"
      mc:Ignorable="d" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AboutPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Sulfur Launcher" FontWeight="Medium" FontSize="36" Margin="8,8,8,0" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" Grid.Row="1"/>
        <ui:InfoBar x:Name="UnderDevInfoBar" Title="Under Development" Message="This is a development build. Issues are expected." Severity="Informational" Grid.Row="4" Margin="8,8,8,8" IsOpen="True" IsClosable="False"/>

        <TextBlock Text="App Version: " Grid.Row="3" HorizontalAlignment="Left" Margin="8,8,8,8" FontSize="18"/>
        <TextBlock x:Name="AppVerBox" Grid.Row="3" Margin="120,8,8,8" FontSize="18" FontWeight="Bold"/>
    </Grid>
</ui:UiPage>
